	private static boolean isPrime(int num) {
		int primeNumber=0;
		for (int i = 1; i < num; i++) {
			if (num%i==0) {
				primeNumber++;
			}
		}
		if (primeNumber==2) {
			return true;
		}
		// TODO Auto-generated method stub
		return false;
	}



