		if (isVowelPresent(str)) {
			System.out.println("yes");
		} else {
			System.out.println("No");
		}
	}

	private static boolean isVowelPresent(String str) {

		String regEx = "[aeiouAEIOU]";
		for (char ch : str.toCharArray()) {
			if (String.valueOf(ch).matches(regEx)) {
				return true;
			}
			 
		}
		return false;
	}

